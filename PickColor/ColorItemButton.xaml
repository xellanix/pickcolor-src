<RadioButton
    x:Class="PickColor.ColorItemButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PickColor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Style="{StaticResource ColorRadioBtn}"
    GroupName="MainColor">

    <Grid>
        <Rectangle x:Name="ShadowCaster" Width="28" Height="28" RadiusX="6" RadiusY="6"/>
        <Rectangle x:Name="ShadowObject" Width="28" Height="28" RadiusX="6" RadiusY="6">
            <Rectangle.Fill>
                <SolidColorBrush x:Name="RectColor"/>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</RadioButton>
